@page
@model UniCodeProject.API.Pages.Admin.AdminLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Login</title>
    <link rel="stylesheet" href="/css/admin-login.css" />
</head>
<body>
<div class="login-container">
    <div class="card">
        <h2>Admin Login</h2>
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="form-label email" >Email address</label>
                <input asp-for="Username" name="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label password">Password</label>
                <input asp-for="Password" name="Password" class="form-control" type="password" />
            </div>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p style="color:red; margin-top: 3px; margin-left: 5px; font-size: 13.5px;">@Model.ErrorMessage</p>
            }
            <button type="submit" class="btn-login">Login</button>
        </form>
    </div>
</div>
</body>
</html>